      "binaryDir": "${sourceDir}/build/make-debug-tests",
      "cacheVariables": {
        "CTEST_ACTIVE": "ON"
      }
    },
    {
      "name": "make-release",
      "displayName": "Unix Makefiles Release",
      "description": "Konfiguracja Release z generatorem Unix Makefiles.",
      "inherits": "make-debug",
      "binaryDir": "${sourceDir}/build/make-release",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    },
    {
      "name": "make-release-tests",
      "displayName": "Unix Makefiles Release (tests)",
      "description": "Release + Make z aktywnymi testami.",
      "inherits": "make-release",
      "binaryDir": "${sourceDir}/build/make-release-tests",
      "cacheVariables": {
        "CTEST_ACTIVE": "ON"
      }
    }
