    },
    {
      "name": "make-debug-tests",
      "configurePreset": "make-debug-tests"
    },
    {
      "name": "make-release",
      "configurePreset": "make-release"
    },
    {
      "name": "make-release-tests",
      "configurePreset": "make-release-tests"
    }
  ]
