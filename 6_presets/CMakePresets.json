{
  "version": 4,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 23,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "ninja-debug",
      "displayName": "Ninja Debug",
      "description": "Konfiguracja Debug z generatorem Ninja.",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/ninja-debug",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "name": "ninja-release",
      "displayName": "Ninja Release",
      "description": "Konfiguracja Release z generatorem Ninja.",
      "inherits": "ninja-debug",
      "binaryDir": "${sourceDir}/build/ninja-release",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    },
    {
      "name": "make-debug",
      "displayName": "Unix Makefiles Debug",
      "description": "Konfiguracja Debug z generatorem Unix Makefiles.",
      "generator": "Unix Makefiles",
      "binaryDir": "${sourceDir}/build/make-debug",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "name": "make-release",
      "displayName": "Unix Makefiles Release",
      "description": "Konfiguracja Release z generatorem Unix Makefiles.",
      "inherits": "make-debug",
      "binaryDir": "${sourceDir}/build/make-release",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "ninja-debug",
      "configurePreset": "ninja-debug"
    },
    {
      "name": "ninja-release",
      "configurePreset": "ninja-release"
    },
    {
      "name": "make-debug",
      "configurePreset": "make-debug"
    },
    {
      "name": "make-release",
      "configurePreset": "make-release"
    }
  ]
}

