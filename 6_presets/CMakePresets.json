{
  "version": 3,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 20,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "ninja-debug",
      "displayName": "Ninja Debug",
      "description": "Konfiguracja Debug z generatorem Ninja.",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/ninja-debug",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "name": "ninja-debug-tests",
      "displayName": "Ninja Debug (tests)",
      "description": "Debug + Ninja z aktywnymi testami.",
      "inherits": "ninja-debug",
      "binaryDir": "${sourceDir}/build/ninja-debug-tests",
      "cacheVariables": {
        "CTEST_ACTIVE": "ON"
      }
    },
    {
      "name": "ninja-release",
      "displayName": "Ninja Release",
      "description": "Konfiguracja Release z generatorem Ninja.",
      "inherits": "ninja-debug",
      "binaryDir": "${sourceDir}/build/ninja-release",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    },
    {
      "name": "ninja-release-tests",
      "displayName": "Ninja Release (tests)",
      "description": "Release + Ninja z aktywnymi testami.",
      "inherits": "ninja-release",
      "binaryDir": "${sourceDir}/build/ninja-release-tests",
      "cacheVariables": {
        "CTEST_ACTIVE": "ON"
      }
    },
    {
      "name": "make-debug",
      "displayName": "Unix Makefiles Debug",
      "description": "Konfiguracja Debug z generatorem Unix Makefiles.",
